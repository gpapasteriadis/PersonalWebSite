@inject MudLocalizer localizer

<MudGrid Justify="Justify.SpaceEvenly" Style="width:95%; margin-inline:auto; margin-top:30px; margin-bottom:60px;">
    <MudItem>
        <MudImage Fluid=true Style="background-color:burlywood;" Class="rounded-pill" Src="/Icons/me-removebg.png" ObjectFit="ObjectFit.Cover" Width="250" Height="280" Elevation="15" />
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudText GutterBottom=true Color="Color.Primary" Typo="Typo.h6">
            Hello! my name is
        </MudText>
        <MudText GutterBottom=true Color="Color.Primary" Typo="Typo.h3">
            <b>George Papasteriadis</b>
        </MudText>
        <MudText Color="Color.Primary" Typo=GetTypo()>
            @localizer["about"]
        </MudText>
    </MudItem>
</MudGrid>

@code{
    [CascadingParameter]
    protected Breakpoint breakpoint { get; set; }

    private Typo GetTypo()
    {
        var size = breakpoint;
        if (size == Breakpoint.Xs)
        {
            return Typo.body1;
        }
        else if (size == Breakpoint.Sm)
        {
            return Typo.h6;
        }
        else if (size == Breakpoint.Md)
        {
            return Typo.h4;
        }
        else
        {
            return Typo.h3;
        }
    }

}
