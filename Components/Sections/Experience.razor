@code {
    [CascadingParameter]
    protected Breakpoint breakpoint { get; set; }

    private Typo GetTypo()
    {
        var size = breakpoint;
        if (size == Breakpoint.Xs)
        {
            return Typo.body1;
        }
        else if (size == Breakpoint.Sm)
        {
            return Typo.h6;
        }
        else if (size == Breakpoint.Md)
        {
            return Typo.h4;
        }
        else
        {
            return Typo.h3;
        }
    }

}
