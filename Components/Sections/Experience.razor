                            <MudText Color="Color.Primary" Typo="Typo.h5" GutterBottom="true">
                                <b>Software Engineer</b>
                                <MudLink Target="_blank" Color="Color.Success" Href="@(config.GetValue<String>("JobLinks:Terracom"))" Typo="Typo.h5">@@Terracom S.A.</MudLink>
