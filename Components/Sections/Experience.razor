@inject MudLocalizer localizer
@inject IConfiguration config

<MudHidden Breakpoint="Breakpoint.SmAndUp" Invert=true>
    <MudCard id="jobs" Elevation="2" Style="margin-top:50px; margin-bottom:20px; width:85%; margin-inline:auto;">
        <MudText Style="margin-bottom:20px; padding-top:20px;" Color="Color.Primary" Align="Align.Center" Typo=TitleTypo1()>
            @(new MarkupString(localizer["ExperienceTitle"]))
        </MudText>
        <MudCardContent>
            <MudTimeline TimelineAlign="TimelineAlign.Start" Style="width:85%; margin-inline:auto; margin-bottom:30px;">

                <MudTimelineItem Color="Color.Primary" Elevation="25">
                    <ItemOpposite>
                        <MudText Color="Color.Primary" Typo=TitleTypo2()>@localizer["PwCDate"]</MudText>
                    </ItemOpposite>
                    <ItemContent>
                        <MudPaper Elevation="0">
                            <MudText Color="Color.Primary" Typo=TitleTypo2() GutterBottom="true">
                                @(new MarkupString(localizer["SoftwareEngineer"]))
                                <MudLink Target="_blank" Color="Color.Success" Href="@(config.GetValue<String>("JobLinks:PwC"))" Typo=TitleTypo2()>@@PwC Greece</MudLink>
                            </MudText>
                            <MudText Typo=DescTypo()>
                                @(new MarkupString(localizer["PwCDesc"]))
                            </MudText>
                        </MudPaper>
                    </ItemContent>
                </MudTimelineItem>

                <MudTimelineItem TimelineAlign="TimelineAlign.End" Color="Color.Primary" Elevation="25">
                    <ItemOpposite>
                        <MudText Color="Color.Primary" Typo=TitleTypo2()>@localizer["ArmyDate"]</MudText>
                    </ItemOpposite>
                    <ItemContent>
                        <MudPaper Elevation="0">
                            <MudText Color="Color.Primary" Typo=TitleTypo2() GutterBottom="true">
                                @(new MarkupString(localizer["SoftwareEngineer"]))
                                <MudLink Target="_blank" Color="Color.Success" Href="@(config.GetValue<String>("JobLinks:Army"))" Typo=TitleTypo2()>@@@localizer["ArmyDepartment"]</MudLink>
                            </MudText>
                            <MudText Typo=DescTypo()>
                                @(new MarkupString(localizer["ArmyDesc"]))
                            </MudText>
                        </MudPaper>
                    </ItemContent>
                </MudTimelineItem>

                <MudTimelineItem TimelineAlign="TimelineAlign.End" Color="Color.Primary" Elevation="25">
                    <ItemOpposite>
                        <MudText Color="Color.Primary" Typo=TitleTypo2()>@localizer["TerracomDate"]</MudText>
                    </ItemOpposite>
                    <ItemContent>
                        <MudPaper Elevation="0">
                            <MudText Color="Color.Primary" Typo=TitleTypo2() GutterBottom="true">
                                @(new MarkupString(localizer["SoftwareEngineer"]))
                                <MudLink Target="_blank" Color="Color.Success" Href="@(config.GetValue<String>("JobLinks:Terracom"))" Typo=TitleTypo2()>@@Terracom S.A.</MudLink>
                            </MudText>
                            <MudText Typo=DescTypo()>
                                @(new MarkupString(localizer["TerracomDesc"]))
                            </MudText>
                        </MudPaper>
                    </ItemContent>
                </MudTimelineItem>

                <MudTimelineItem TimelineAlign="TimelineAlign.End" Color="Color.Primary" Elevation="25">
                    <ItemOpposite>
                        <MudText Color="Color.Primary" Typo=TitleTypo2() GutterBottom="true">@localizer["CothetaDate"]</MudText>
                    </ItemOpposite>
                    <ItemContent>
                        <MudPaper Elevation="0">
                            <MudText Color="Color.Primary" Typo=TitleTypo2() GutterBottom="true">
                                @(new MarkupString(localizer["SoftwareEngineerIntern"]))
                                <MudLink Target="_blank" Color="Color.Success" Href="@(config.GetValue<String>("JobLinks:CoTheta"))" Typo=TitleTypo2()>@@CoTheta</MudLink>
                            </MudText>
                            <MudText Typo=DescTypo()>
                                @(new MarkupString(localizer["CothetaDesc"]))
                            </MudText>
                        </MudPaper>
                    </ItemContent>
                </MudTimelineItem>

            </MudTimeline>
            <MudItem Class="d-flex flex-wrap justify-content-center">
                <MudText Inline=true Color=Color.Primary Typo=DescTypo()>
                    @localizer["CV"]
                    <MudIconButton Style="color:burlywood;" Size="Size.Medium" Title="Download" Href="George-CV.pdf" target="_blank" Class="bounceInDownloadIcon" Icon="@Icons.Material.Filled.Download" />
                </MudText>
            </MudItem>
        </MudCardContent>
    </MudCard>
</MudHidden>



