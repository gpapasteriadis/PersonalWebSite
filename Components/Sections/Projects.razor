@inject MudLocalizer localizer

<MudHidden Breakpoint="Breakpoint.SmAndUp" Invert=true>
    <MudCard id="projects" Elevation="2" Style="margin-top:80px; width:85%; margin-inline:auto;">
        <MudCardContent>
            <MudText Align="Align.Center" Color="Color.Primary" Typo="Typo.h4">
                <b>Some projects</b>
            </MudText>
            <MudText Color="Color.Primary" Style="margin-top:50px;" Align="Align.Center" Typo="Typo.body1">
                Coming soon...
            </MudText>
        </MudCardContent>
    </MudCard>
</MudHidden>

<MudHidden Breakpoint="Breakpoint.Xs" Invert=true>
    <MudCard id="projects" Elevation="2" Style="margin-top:80px; width:100%; margin-inline:auto;">
        <MudCardContent>
            <MudText Align="Align.Center" Color="Color.Primary" Typo="Typo.h4">
                <b>Some projects</b>
            </MudText>
            <MudText Color="Color.Primary" Style="margin-top:50px;" Align="Align.Center" Typo="Typo.body1">
                Coming soon...
            </MudText>
        </MudCardContent>
    </MudCard>
</MudHidden>



@code {
    [CascadingParameter]
    protected Breakpoint breakpoint { get; set; }

    private Typo GetTypo()
    {
        var size = breakpoint;
        if (size == Breakpoint.Xs)
        {
            return Typo.body1;
        }
        else if (size == Breakpoint.Sm)
        {
            return Typo.h6;
        }
        else if (size == Breakpoint.Md)
        {
            return Typo.h4;
        }
        else
        {
            return Typo.h3;
        }
    }

}
