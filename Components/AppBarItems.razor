@using PersonalWebSite.SharedState
@inject NavigationManager Navigation
@inject StateContainer State

<MudHidden Breakpoint="Breakpoint.SmAndUp" Invert=true>
    <MudButton Class="rounded-pill" OnClick=homeIconClicked>
        <MudImage Fluid=true Class="rounded-pill" Src="/Icons/codeIcon-removebg.png" Width="32"></MudImage>
    </MudButton>
    <MudSpacer />
    <MudItem Style="margin-right:10px;">
        <MudLink Href="#jobs">
            <MudText Typo="Typo.h6">
                Experience
            </MudText>
        </MudLink>
    </MudItem>
    <MudItem Style="margin-right:10px;">
        <MudLink Href="#skills">
            <MudText Typo="Typo.h6">
                Skills
            </MudText>
        </MudLink>
    </MudItem>
    <MudItem Style="margin-right:10px;">
        <MudLink Href="#projects">
            <MudText Typo="Typo.h6">
                Projects
            </MudText>
        </MudLink>
    </MudItem>
    <MudItem>
        <MudLink Href="#contact">
            <MudText Typo="Typo.h6">
                Contact
            </MudText>
        </MudLink>
    </MudItem>
    <MudSpacer />
</MudHidden>
<MudHidden Breakpoint="Breakpoint.Xs" Invert=true>
    <MudIconButton OnClick="@ToggleSideBar" Icon="@Icons.Material.Outlined.Menu" Size=Size.Medium Style="color:burlywood;" Class="mr-5" />
    <MudSpacer />
</MudHidden>

<CultureSelector />
<ThemeSelector />


@code {

    private void homeIconClicked()
    {
        Navigation.NavigateTo("/", forceLoad: true);
    }

    void ToggleSideBar()
    {
        State.ChangeSideBarState();
    }

}