@using System.Globalization
@using PersonalWebSite.Components
@inherits LayoutComponentBase
@inject ILocalStorageService localStorage
@inject IJSRuntime JS
@inject ISnackbar SnackbarService

<MudThemeProvider Theme="MyCustomTheme" IsDarkMode=@_isDarkMode/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Class="flex-wrap" DisableGutters=false id="appbar" Elevation="3" Dense="true">
        <MudItem>
            <MudText Color=Color.Primary Typo="Typo.h6">
                Resume:
                <MudIconButton Style="color:burlywood" Size="Size.Medium" Title="Download" Href="George-CV.pdf" target="_blank" Class="bounceIn" Icon="@Icons.Material.Filled.Download" />
            </MudText>
        </MudItem>
        <MudSpacer />
        <MudItem Style="margin-right:10px;">
            <MudLink Href="#about">
                <MudText Typo="Typo.h6">
                    About
                </MudText>
            </MudLink>
        </MudItem>
        <MudItem Style="margin-right:10px;">
            <MudLink Href="#jobs">
                <MudText Typo="Typo.h6">
                    Experience
                </MudText>
            </MudLink>
        </MudItem>
        <MudItem Style="margin-right:10px;">
            <MudLink Href="#skills">
                <MudText Typo="Typo.h6">
                    Skills
                </MudText>
            </MudLink>
        </MudItem>
        <MudItem>
            <MudLink Href="#contact">
                <MudText Typo="Typo.h6">
                    Contact
                </MudText>
            </MudLink>
        </MudItem>
        <MudSpacer />
        <MudItem>
            <CultureSelector/>
        </MudItem>
        <ThemeSelector darkModeChanged="@darkModeChanged" />
    </MudAppBar>

    <MudMainContent Style="overflow:hidden">
        @Body
    </MudMainContent>

    <MudScrollToTop Style="margin:20px; z-index:2001;">
        <MudFab Size="Size.Medium" Style="color:burlywood" IconSize="Size.Large" StartIcon="@Icons.Material.Filled.KeyboardArrowUp" />
    </MudScrollToTop>
</MudLayout>

